<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/urbanjourney?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456789</property>
		
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="show_sql">true</property>
		
		<!-- Mapeo de todos las clases que son entidad -->
		<mapping class="models.Ruta"/>
		<mapping class="models.Lugar"/>
		<mapping class="models.Trayectoria"/>
	</session-factory>
</hibernate-configuration>